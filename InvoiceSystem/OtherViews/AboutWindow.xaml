<Window x:Class="InvoiceSystem.OtherClasses.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoiceSystem.OtherClasses"
        mc:Ignorable="d"
        Title="About Invoice System App" Height="300" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>

        <Label Name="aboutText_TextBox" Content="{Binding aboutWindowText}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <Label.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="TextWrapping" Value="Wrap" />
                </Style>
            </Label.Resources>
        </Label>
    </Grid>
</Window>
