<UserControl x:Class="InvoiceSystem.Main.wndMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InvoiceSystem.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>


        <Button Content="Search invoice" FontSize="30" Grid.Row="1" Grid.Column="1" Click="SearchInvoicesButton_Action" />
        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Row="0" Grid.Column="1" Name="InvoiceTable_DataGrid" ItemsSource="{Binding mainLogic.Invoices}" ColumnWidth="*" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Invoice #" Binding="{Binding InvoiceNum.column}" IsReadOnly="True" FontSize="30"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding InvoiceDate}" IsReadOnly="True" FontSize="30"/>
                    <DataGridTextColumn Header="Total Cost" Binding="{Binding TotalCost}" IsReadOnly="True" FontSize="30"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="get invoices" Grid.Row="1" Grid.Column="1" FontSize="30" Margin="10,10,10,0" Click="GetInvoicesButton_Action"/>
        </Grid>

        <Button Content="Edit Items" FontSize="30" Grid.Row="1" Grid.Column="3" Click="InvoiceItemEditButton_Action"/>
    </Grid>
</UserControl>