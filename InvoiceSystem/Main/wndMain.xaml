<UserControl x:Class="InvoiceSystem.Main.wndMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InvoiceSystem.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!--Grid Definitions-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <!-- Menu bar-->
        <DockPanel Grid.Column="1" Grid.ColumnSpan="3" >
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Exit" Click="MenuBarExitButton_Action"/>
                </MenuItem>
                <MenuItem Header="_Actions">
                    <MenuItem Header="New Invoice" Click="AddNewInvoiceMenuButton_Action"/>
                    <MenuItem Header="Search Invoices" Click="SearchInvoicesMenuButton_Action"/>
                    <MenuItem Header="Edit existing Items" Click="EditItemsMenuButton_Action"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_About"/>
                </MenuItem>
            </Menu>
            
        </DockPanel>

        <!--Invoice list, double click action opens to view all details -->
        <Grid Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <DataGrid Grid.Row="0" Grid.Column="1" Name="InvoiceTable_DataGrid" ItemsSource="{Binding mainLogic.Invoices}" ColumnWidth="*" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Invoice #" Binding="{Binding InvoiceNum.column}" IsReadOnly="True" FontSize="30"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding InvoiceDate}" IsReadOnly="True" FontSize="30"/>
                    <DataGridTextColumn Header="Total Cost" Binding="{Binding TotalCost}" IsReadOnly="True" FontSize="30"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="refresh invoices" Grid.Row="1" Grid.Column="1" FontSize="30" Click="GetInvoicesButton_Action"/>
        </Grid>
        
    </Grid>
</UserControl>